<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\\FrameXML\\UI.xsd">
	<Frame name="GsearchFrame" parent="UIParent" toplevel="true" enableMouse="true" movable="true" hidden="true">
		<Size>
			<AbsDimension x="420" y="380"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\\DialogFrame\\UI-DialogBox-Background" edgeFile="Interface\\DialogFrame\\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>

		<Scripts>
			<OnLoad>
				Gsearch_OnLoad();
			</OnLoad>
			<OnEvent>
				Gsearch_OnEvent(event);
			</OnEvent>
			<OnMouseDown>
				if arg1 == "LeftButton" then
					this:StartMoving();
				end
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing();
			</OnMouseUp>
		</Scripts>

		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentTitle" inherits="GameFontNormalLarge">
					<Anchors>
						<Anchor point="TOP" x="0" y="-16"/>
					</Anchors>
					<Text>Guild Search</Text>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<Button name="$parentClose" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-6" y="-6"/>
				</Anchors>
			</Button>

			<EditBox name="$parentQuery" autoFocus="false" numeric="false">
				<Size>
					<AbsDimension x="240" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" x="18" y="-48"/>
				</Anchors>
				<Backdrop bgFile="Interface\\ChatFrame\\ChatFrameBackground" edgeFile="Interface\\Tooltips\\UI-Tooltip-Border" tile="true">
					<BackgroundInsets>
						<AbsInset left="3" right="3" top="3" bottom="3"/>
					</BackgroundInsets>
					<TileSize><AbsValue val="16"/></TileSize>
					<EdgeSize><AbsValue val="16"/></EdgeSize>
				</Backdrop>
				<Color r="0" g="0" b="0" a="0.5"/>
				<FontString inherits="GameFontHighlightSmall"/>
				<Scripts>
					<OnEnterPressed>
						Gsearch_DoSearch();
						this:ClearFocus();
					</OnEnterPressed>
					<OnEscapePressed>
						this:ClearFocus();
					</OnEscapePressed>
				</Scripts>
			</EditBox>

			<Button name="$parentSearch" inherits="UIPanelButtonTemplate" text="Search">
				<Size><AbsDimension x="70" y="22"/></Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentQuery" relativePoint="RIGHT" x="8" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick>
						Gsearch_DoSearch();
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parentRefresh" inherits="UIPanelButtonTemplate" text="Refresh">
				<Size><AbsDimension x="70" y="22"/></Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentSearch" relativePoint="RIGHT" x="6" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick>
						Gsearch_RequestRoster();
					</OnClick>
				</Scripts>
			</Button>

			<Frame name="$parentList" >
				<Size><AbsDimension x="384" y="270"/></Size>
				<Anchors>
					<Anchor point="TOPLEFT" x="18" y="-86"/>
				</Anchors>
				<Backdrop bgFile="Interface\\ChatFrame\\ChatFrameBackground" edgeFile="Interface\\Tooltips\\UI-Tooltip-Border" tile="true">
					<BackgroundInsets>
						<AbsInset left="3" right="3" top="3" bottom="3"/>
					</BackgroundInsets>
					<TileSize><AbsValue val="16"/></TileSize>
					<EdgeSize><AbsValue val="16"/></EdgeSize>
				</Backdrop>
				<Color r="0" g="0" b="0" a="0.35"/>

				<Frames>
					<ScrollFrame name="$parentScroll" inherits="FauxScrollFrameTemplate">
						<Size><AbsDimension x="360" y="250"/></Size>
						<Anchors>
							<Anchor point="TOPLEFT" x="10" y="-10"/>
						</Anchors>
						<Scripts>
							<OnVerticalScroll>
								FauxScrollFrame_OnVerticalScroll(this, arg1, 18, Gsearch_UpdateList);
							</OnVerticalScroll>
						</Scripts>
					</ScrollFrame>
				</Frames>
			</Frame>

			<FontString name="$parentStatus" inherits="GameFontHighlightSmall">
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="18" y="18"/>
				</Anchors>
				<Text></Text>
			</FontString>

		</Frames>
	</Frame>
</Ui>
